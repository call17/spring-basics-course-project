<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-3.2.xsd">
 		
    <import resource="loggers.xml"/>

    <bean
            class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:client.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>

	<bean id="client" class="com.yet.spring.core.beans.Client" p:greeting="${greeting}">
        <constructor-arg value="${id}" />
        <constructor-arg value="${name}" />
    </bean>

	<bean id="app" class="com.yet.spring.core.App" c:client-ref="client" c:eventLogger-ref="cacheFileEventLogger" c:loggers-ref="loggerMap"/>
	
	<bean id="event" class="com.yet.spring.core.beans.Event" scope="prototype" c:date-ref="date" c:df-ref="dateFormat"/>
    
    <bean id="dateFormat" class="java.text.DateFormat"
        factory-method="getDateTimeInstance"/>

    <bean id="date" class="java.util.Date"/>

    <util:map id="loggerMap">
        <entry key="INFO" value-ref="consoleEventLogger"/>
        <entry key="ERROR" value-ref="combinedEventLogger"/>
    </util:map>

</beans>